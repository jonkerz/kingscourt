.row[ng-cloak]
  .col-md-3.hidden-md.hidden-lg
    .transparent-well.clearfix
      ng-include src="'shared/_alerts.html'"
    .well.clearfix
      ng-include src="'generator/_generate_panel.html'"

  .col-md-9
    .well.clearfix[ng-cloak]
      .responsive-card.thumbnail ng-repeat="card in kingdom.cards"
        img.card-border-radius.shadow[ng-src="cards/{{::card.image}}" card-modal data-card="{{card}}"]
      div ng-show="kingdom.cards.length < 10"
        .responsive-card.thumbnail ng-repeat="a in range(10 - kingdom.cards.length) track by $index"
          img.card-border-radius.shadow ng-src="randomizer.jpg"

  .col-md-3
    .transparent-well.clearfix.hidden-xs.hidden-sm
      ng-include src="'shared/_alerts.html'"
    .well.clearfix.hidden-xs.hidden-sm
      ng-include src="'generator/_generate_panel.html'"
    ng-include src="'shared/_save_panel.html'"
