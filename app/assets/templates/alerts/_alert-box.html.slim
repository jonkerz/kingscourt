<span ng-controller="AlertsCtrl">
  <ul ng-show="alerts.alerts.length" class="nav nav-pills nav-stacked">
    <li class="active">
      <a href>
        <span class="badge pull-right">{{alerts.alerts.length}}</span> Messages
      </a>
    </li>
  </ul>

  <alert ng-repeat="alert in alerts.alerts" type="info" ng-if="$index == alerts.alerts.length-1" close="alerts.closeAlert(alerts.alerts.length-1)">
    <span ng-bind-html="alert.message"></span>
  </alert>
</span>