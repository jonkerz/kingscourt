ng-include src="'shared/expansion_selector.html'"
.row[ng-controller="GeneratorCtrl" ng-cloak]
  .col-md-3.hidden-md.hidden-lg
    .well-t.clearfix
      ng-include src="'shared/_alert-box.html'"
    .well.clearfix
      ng-include src="'builder/generator_panel_controls.html'"
  .col-md-9
    .well.clearfix[ng-cloak]
      .row.kingdom
        .animate.col-xs-6.col-sm-4.col-md-3.col-lg-20p.thumbnail.transparent-bg ng-repeat="card in kingdom.cards" ng-controller="ModalCtrl"
          img.col-xs-12.animate.card-border-radius.shadow ng-click="openCard(card)" ng-src="cards/{{::card.image}}"
        div ng-show="kingdom.cards.length < 10"
          .col-xs-6.col-sm-4.col-md-3.col-lg-20p.thumbnail.transparent-bg ng-repeat="a in range(10 - kingdom.cards.length) track by $index"
            img.col-xs-12.animate.card-border-radius.shadow ng-src="cards/Randomizer.jpg"
  .col-md-3
    .well-t.clearfix.hidden-xs.hidden-sm
      ng-include src="'shared/_alert-box.html'"
    .well.clearfix.hidden-xs.hidden-sm
      ng-include src="'builder/generator_panel_controls.html'"
    ng-include src="'builder/_panel_save.html'"
