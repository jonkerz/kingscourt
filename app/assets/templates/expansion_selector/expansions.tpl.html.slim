.row
  .col-md-12.well-t.expansions.hidden-xs
    .btn-group.nocheck
      label.btn.btn-primary.btn-sm[ng-repeat="expansion in expansionSelector.names" ng-class="{\"active\": expansionSelector.isActive(expansion.id)}"]
        input[type="checkbox" checklist-model="expansionSelector.selected" checklist-value="expansion.id"]
        |  {{expansion.text}} 
    .btn-group
      button.btn.btn-default.btn-sm[ng-click="expansionSelector.checkAll()"]
        | All
      button.btn.btn-default.btn-sm[ng-click="expansionSelector.uncheckAll()"]
        | None
  .col-md-12.well-t.expansions.visible-xs
    .btn-group.nocheck[style="margin-bottom:15px"]
      label.col-xs-4.btn.btn-primary.btn-sm[ng-repeat="expansion in expansionSelector.names" ng-class="{\"active\": expansionSelector.isActive(expansion.id)}"]
        input[type="checkbox" checklist-model="expansionSelector.selected" checklist-value="expansion.id"]
        |  {{expansion.text}} 
      button.visible-xs.col-xs-4.btn.btn-default.btn-sm[ng-click="expansionSelector.checkAll()"]
        | All
      button.visible-xs.col-xs-4.btn.btn-default.btn-sm[ng-click="expansionSelector.uncheckAll()"]
        | None
