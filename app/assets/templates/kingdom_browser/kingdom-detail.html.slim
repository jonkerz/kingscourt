.row ng-controller="KingdomDetailCtrl"
  .col-md-9
    .well.clearfix[ng-cloak]
      h3 {{kingdom.name}}
      .row.kingdom
        .col-xs-6.col-sm-4.col-md-3.col-lg-20p.thumbnail.transparent-bg ng-repeat="card in kingdom.cards" ng-controller="ModalCtrl"
          img.col-xs-12.animate.card-border-radius ng-click="openCard(card)" ng-src="cards/{{::card.image}}"
        div ng-show="kingdom.cards.length < 10"
          .col-xs-6.col-sm-4.col-md-3.col-lg-20p.thumbnail.transparent-bg ng-repeat="a in range(10 - kingdom.cards.length) track by $index"
            img.col-xs-12.animate.card-border-radius ng-src="cards/Randomizer.jpg"
    panel-collapse title="Comments"
      dir-disqus disqus-shortname="kingscourt" disqus-identifier="kingdoms/{{kingdom.id}}" disqus-url="http://kingscourt.io/#!/kingdoms/{{kingdom.id}}" ready-to-bind="{{contentLoaded}}"
  .col-md-3
    ng-include src="'kingdom_browser/kingdom-detail_panel_info.html'"
